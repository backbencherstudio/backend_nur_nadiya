generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                  String   @id @default(uuid())
  name                String
  email               String   @unique
  password            String
  role                String   @default("user")
  image               String?
  googleId            String?
  isGoogleVerified    Boolean   @default(false)

  last_login_at       DateTime? @default(now())
  refreshToken        String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model MaidEnquiry {
  id                                 String @id @default(uuid())
  full_name                          String
  enquiry_type                       String
  date_of_birth                      DateTime
  transfer_date                      DateTime
  wp_number                          String
  mobile_number                      String
  language                           String
  nationality                        String
  additional_information             String
  current_employer                   Boolean
  image_name                         String?
  status                             String @default("uncontacted")

  createdAt                     DateTime @default(now())
  updatedAt                     DateTime @updatedAt

  @@map("maid_enquiries")
}
model EmployerEnquiry {
  id                                 String @id @default(uuid())
  full_name                          String
  enquiry_type                       String
  contact_number                     String
  email                              String
  hosehold_type                      String
  language                           String
  budget                             String
  additional_information             String
  status                             String @default("uncontacted")

  createdAt                     DateTime @default(now())
  updatedAt                     DateTime @updatedAt

  @@map("employer_enquiries")
}

model BioData{
  id                                  String @id @default(uuid())
  full_name                           String
  date_of_birth                       DateTime
  place_of_birth                      String
  status                              String @default("available")
  nationality                         String
  height                              String
  weight                              String
  name_of_airPort                     String
  marital_status                      String
  religion                            String
  education_level                     String
  age_of_childern                     String
  number_of_childern                  String
  image                               String?

  allergies                           Boolean @default(false)
  physical_disabilities               Boolean @default(false)
  mental_illness                      Boolean @default(false)
  epilepsy                            Boolean @default(false)
  tuberculosis                        Boolean @default(false)
  heart_disease                       Boolean @default(false)
  malaria                             Boolean @default(false)
  operations                          Boolean @default(false)
  others                              String?
  dietary_restrictions                Boolean @default(false)
  preference_for_rest_days            Boolean @default(false)

  any_other_remarks                   String?
  care_of_infants                     String?
  care_of_infants_willingness         Boolean @default(false)
  care_of_infants_experience          Boolean @default(false)
  care_of_infants_assessment          String?
  // two
  care_of_elderly                     String?
  care_of_elderly_willingness         Boolean @default(false)
  care_of_elderly_experience          Boolean @default(false)
  care_of_elderly_assessment          String?
  // three
  care_of_disabled                    String?
  care_of_disabled_willingness        Boolean @default(false)
  care_of_disabled_experience         Boolean @default(false)
  care_of_disabled_assessment         String?
  // four
  general_housework                   String?
  general_housework_willingnes        Boolean @default(false)
  general_housework_experience        Boolean @default(false)
  general_housework_assessment        String?
  // five
  cooking                             String?
  cooking_willingness                 Boolean @default(false)
  cooking_experience                  Boolean @default(false)
  cooking_assessment                  String?
  // six
  language_abilities                  String?
  language_abilities_willingness      Boolean @default(false)
  language_abilities_experience       Boolean @default(false)
  language_abilities_assessment       String?
  // seven
  other_skills                        String?
  other_skills_willingness            Boolean @default(false)
  other_skills_experience             Boolean @default(false)
  other_skills_assessment             String?

  // employee history
  date_from                           DateTime?
  date_to                             DateTime?
  country                             String?
  employer                            String?
  work_duties                         String?
  remarks                             String?
  other_remarks                       String?
  

  createdAt                           DateTime @default(now())
  updatedAt                           DateTime @updatedAt
  @@map("bio_data")
}